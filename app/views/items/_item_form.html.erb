<%= form_for(@item, url: save_done_list_item_path(@list, @item), method: :post, remote: true) do |f| %>
  <div class="modal-header">
    <h4 class="modal-title" id="itemModalLabel" data-item="<%= @item.id %>"><strong><%= f.text_field :name, id: "item-name" %></strong></h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= f.hidden_field :category_id %>
      <%= f.hidden_field :done, :value => true %>
      <div class="form-group category-select">
      <label for="item-category" class="control-label category_label">Category</label>
      <%= f.select :category_id, current_user.categories.collect {|p| [ p.name, p.id ] }, {prompt: 'Select Category'}, {class: 'category-select-search'} %>
      </div>
      <div class="form-group item-description">
        <label for="item-description" class="control-label">Description</label>
        <%= f.text_field :description, id: "item-description" %>
      </div>
      <div class="form-group">
        <label for="item-price" class="control-label">Price</label>
        <%= f.text_field :price, id: "item-price" %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button id="closeModal" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <input id="updateModal" type="submit" class="btn btn-primary" value="Done">
  </div>
<% end -%>