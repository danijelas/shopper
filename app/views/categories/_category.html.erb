<tr id="category-<%=category.id%>">
  <td id="category-name-<%=category.id%>" style="width:25%;"><%= category.name%></td>
  <td style="width:20%;">
    <%= link_to(edit_user_category_path(current_user, category), remote: true) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
  </td>
  <td style="width:20%;">
  <% if category.items.size > 0 %>
    <a href="#" onclick="alert('Bazinga');">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </a>
  <% else %>
    <%= link_to((user_category_path(current_user, category)), remote: true, method: :delete, data: { confirm: "Are you sure?" }) do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  <% end %>
  </td>
</tr>