<tr id="list-<%=list.id%>">
  <td id="list-name-<%=list.id%>" style="width:25%;"><strong><%= link_to list.name, list %></strong></td>
  <td style="width:20%;">
    <%= link_to(edit_list_path(list), remote: true) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
  </td>
  <td style="width:20%;">
    <%= link_to((list), remote: true, method: :delete, data: { confirm: "Are you sure?" }) do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </td>
</tr>